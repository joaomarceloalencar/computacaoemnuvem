{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Criacao de um Servidor Simples",
	"Parameters": {
		"KeyName": {
			"Description": "Nome do par de chaves",
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Default": "mykey"
		},
		"VPC": {
			"Description": "O VPC a ser utilizado",
			"Type": "AWS::EC2::VPC::Id"
		},
		"Subnet": {
			"Description": "Subrede a ser utilizada",
			"Type": "AWS::EC2::Subnet::Id"
		},
		"InstanceType": {
			"Description": "Tipo de instancia",
			"Type": "String",
			"Default": "t2.micro",
			"AllowedValues": [
				"t2.micro",
				"t2.small",
				"t2.medium"
			]
		},
		"NomeDoSite": {
			"Description": "Nome do Site",
			"Type": "String",
			"Default": "Topicos Avancados"
		},
		"ImageId": {
			"Description": "Identificador da Imagem",
			"Type": "String",
			"Default": "ami-024a64a6685d05041"
		}
	},
	"Resources": {
		"GrupoDeSegurancaServidorWeb": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "Grupo de Seguranca para um Servidor Web",
				"VpcId": {
					"Ref": "VPC"
				},
				"SecurityGroupIngress": [
					{
						"CidrIp": "0.0.0.0/0",
						"FromPort": 80,
						"IpProtocol": "tcp",
						"ToPort": 80
					},
					{
						"CidrIp": "0.0.0.0/0",
						"FromPort": 22,
						"IpProtocol": "tcp",
						"ToPort": 22
					}
				]
			}
		},
		"ServidorWeb": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {
					"Ref": "ImageId"
				},
				"InstanceType": {
					"Ref": "InstanceType"
				},
				"KeyName": {
					"Ref": "KeyName"
				},
				"SecurityGroupIds": [
					{
						"Ref": "GrupoDeSegurancaServidorWeb"
					}
				],
				"SubnetId": {
					"Ref": "Subnet"
				},
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": [
							"",
							[
								"#!/bin/bash -ex \n",
								"export NOME=\"",
								{
									"Ref": "NomeDoSite"
								},
								"\"\n",
								"apt-get update \n",
								"apt-get install -y apache2 \n",
								"systemctl enable apache2 \n",
								"systemctl start apache2 \n",
								"echo \"$NOME\" > /var/www/html/index.html \n"
							]
						]
					}
				}
			}
		}
	},
	"Outputs": {
		"EnderecoPublico": {
			"Value": {
				"Fn::GetAtt": [
					"ServidorWeb",
					"PublicIp"
				]
			},
			"Description": "Endereco para acessar o servidor"
		},
		"EnderecoPrivado": {
			"Value": {
				"Fn::GetAtt": [
					"ServidorWeb",
					"PrivateIp"
				]
			},
			"Description": "Endereco interno do servidor"
		}
	}
}